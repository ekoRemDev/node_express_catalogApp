<!doctype html>
<html lang="en">
<head>
    <% include partials/head.ejs %>
    <title><%= searchResults[0].title %></title>

</head>
<body>
<% include partials/header.ejs %>

<div class="starter-template">


    <!--<p>number :<%= searchResults[0].number %></p>-->
    <!--<p>poster : <%= searchResults[0].poster %></p>-->


</div>


<div class="container">
    <div class="card">
        <div class="container-fluid">
            <div>
                <div class="preview col-md-6">
                    <div><img src="/images/<%= searchResults[0].image %>" class="img-thumbnail"/></div>
                </div>
                <div class="details col-md-6">

                    <h2 class="text-center"><%= searchResults[0].title %></h2>
                    <h2 class="text-center">
                        <button type="button" class="btn btn-info">Price <span
                                    class="badge"><%= searchResults[0].price %> Gel</span></button>
                    </h2>
                    <hr>
                    <h5>
                        <!--<span ><%= searchResults[0].categories %></span>-->

                        <% for (var i = 0; i < searchResults[0].categories.length; i++) { %>
                        <span class="label label-warning text-justify"><%= searchResults[0].categories[i] %></span>
                        <% } %>

                    </h5>
                    <hr>

                    <h4 class="text-justify"><%= searchResults[0].description %></h4>


                    <hr>

                    <p><strong><%= searchResults[0].votes %></strong></p>
                        <button type="button" class="btn btn-default btn-sm">
                            <span class="glyphicon glyphicon-star" aria-hidden="true"></span> Favourite
                        </button>
                        <button type="button" class="btn btn-default btn-sm">
                            <span class="glyphicon glyphicon-heart" aria-hidden="true"></span> Like
                        </button>
                        <button type="button" class="btn btn-default btn-sm">
                            <span class="glyphicon glyphicon-heart" aria-hidden="true"></span> Decision List
                        </button>

                    <button type="button" class="btn btn-info">Price <span
                                class="badge"><%= searchResults[0].price %> Gel</span></button>


                    <hr>
                    <br>



                    <div>
                        <button class="add-to-cart btn btn-default btn-block" type="button">add to cart</button>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>

<% include partials/footer.ejs %>

<% include partials/script.ejs %>
</body>
</html>